{
  "name": "unitodo",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "next dev",
    "dev:backend": "cargo run --release",
    "build": "next build",
    "build:electron": "electron-builder",
    "start": "next start",
    "electron:dev": "concurrently \"npm run dev:frontend\" \"cross-env NODE_ENV=development electron .\"",
    "electron:build": "next build && electron-builder build",
    "electron:start": "cross-env NODE_ENV=production electron .",
    "electron:package": "npm run build && npm run electron:build",
    "electron:package:mac": "npm run build && electron-builder build --mac"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.13.3",
    "@grpc/proto-loader": "^0.7.15",
    "@heroicons/react": "^2.2.0",
    "@lexical/react": "^0.31.0",
    "@types/lodash": "^4.17.16",
    "axios": "^1.6.5",
    "date-fns": "^4.1.0",
    "lexical": "^0.31.0",
    "lodash": "^4.17.21",
    "nanoid": "^5.1.5",
    "next": "^14.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-virtualized-auto-sizer": "^1.0.26",
    "react-window": "^1.8.11",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-virtualized-auto-sizer": "^1.0.8",
    "@types/react-window": "^1.8.8",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "google-protobuf": "^3.21.2",
    "grpc-tools": "^1.12.4",
    "grpc_tools_node_protoc_ts": "^5.3.3",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "ts-protoc-gen": "^0.15.0",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "app.jyu.unitodo",
    "productName": "Unitodo",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "public/icon.icns",
      "target": [
        "dmg"
      ]
    },
    "files": [
      "electron/**/*",
      "out/**/*"
    ],
    "extraResources": [
      {
        "from": "target/release",
        "to": "rust-backend",
        "filter": [
          "unitodo"
        ]
      }
    ],
    "directories": {
      "buildResources": "resources",
      "output": "dist"
    }
  }
}
