{
  "$schema": "./node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Unitodo",
  "version": "0.1.0",
  "identifier": "app.jyu.unitodo",
  "build": {
    "frontendDist": "./out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev:frontend",
    "beforeBuildCommand": "npm run build:frontend"
  },
  "app": {
    "windows": [
      {
        "title": "Unitodo",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
      "active": true,
      "targets": "all",
      "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
      ]
  },
  "plugins": {
    "allowlist": {
      "shell": {
        "open": true,
        "scope": [
          {
            "name": "cursor-open",
            "cmd": "cursor",
            "args": [
              "open",
              { "validator": "^.*$" }
            ]
          },
          {
            "name": "vscode-open",
            "cmd": "vscode",
            "args": [
              "open",
              { "validator": "^.*$" }
            ]
          }
        ]
      }
    }
  }
}
